{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "esnext",
        "sourceMap": true,
        "jsx": "react",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es6", "dom", "es2018.promise"],
        "noUnusedLocals": true,
        "allowJs": true
      },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "preserveSymlinks": true
}